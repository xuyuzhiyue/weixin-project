/* pages/movieDetail/movieDetail.wxss */

.movieDetailContainer{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie_img{
  width: 70%;
  height: 700rpx;
  margin: 20rpx 0;
}


.movie_name{
  font-size: 40rpx;
  font-weight: bold;
}

.movie_detail{
  display: flex;
  flex-direction: column;
  
  font-size: 32rpx;
  line-height: 70rpx;
}

.nav{
  width: 70%;
  height: 80rpx;
  background: green;
  color: #fff;
  line-height: 68rpx;
  margin-top: 20rpx;
 
  border-radius: 16rpx;
}

navigator{
  overflow: hidden;
  width: 70%;
  height: 90rpx;
}
